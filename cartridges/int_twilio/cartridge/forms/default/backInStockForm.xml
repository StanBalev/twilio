<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
	<group formid="backInStockFormDef">
        <field formid="phone" label="label.input.phonenumber" description="address.phone.desc" type="string" mandatory="true"
           binding="phone" min-length="10" max-length="20"
           missing-error="error.message.required"
           range-error="error.message.between10and20"
           parse-error="error.message.parse.phone"
           regexp="^\s*(?:\+?(\d{1,3}))?[-. (]*(\d{3})[-. )]*(\d{3})[-. ]*(\d{4})(?: *x(\d+))?\s*$"/>
	</group>
</form>
